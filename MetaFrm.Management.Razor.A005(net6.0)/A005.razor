@using MetaFrm.Control
@using MetaFrm.Management.Razor.ViewModels
@using MetaFrm.Razor.Essentials
@using Microsoft.AspNetCore.Components.Authorization
@using Microsoft.AspNetCore.Components.Forms
@using Microsoft.AspNetCore.Components.Routing
@using Microsoft.AspNetCore.Components.Web
@inherits BaseComponent

<TitleControl Title="@this.GetAttribute("Description")"></TitleControl>

<CardControl TItem="A005ViewModel" HeaderText="ImageBase64Data"
             CssClass="card bg-dark">
    <Text>
        <FieldControl Label="JPG/PNG File" CssClassAppend="py-2 col-md-12">
            <Control>
                <InputFile class="form-control" placeholder="JPG/PNG File" OnChange="this.InputFileChangeEventArgs" /><br />
                <img class="figure-img" alt="JPG/PNG Image" src="@this.ImageBase64Data" />
                <img class="figure-img rounded-pill" width="30" height="30" alt="JPG/PNG Image User" src="@this.ImageBase64Data" /><br />
                Bytes Length : @(this.ImageBytes.ToString("###,###,##0"))<br />
                File : @(this.DllFile != null ? this.DllFile.Name : "")<br />
                ImageBase64Data Length : @(this.ImageBase64Data != null ? this.ImageBase64Data.Length.ToString("###,###,##0") : "")<br />
                <textarea id="imagebase64data p-2" class="form-control" rows="30" style="height: 200px;" placeholder="ImageBase64Data">@this.ImageBase64Data</textarea>
            </Control>
        </FieldControl>
    </Text>
</CardControl>